<button id="reset-filter-btn" class="btn btn-block btn-secondary">Reset Filter</button>
<div class="keyword-filter">
  <h5 class="search-label">SHOP BY KEYWORD</h5>
  <div class="keyword-input-group">
    <input class="form-control keyword-srch-ip border-secondary py-2" type="search" placeholder="enter search term(s)" id="srch-by-keyword" name="shop-by-keyword">
    <div class="input-group-append">
      <button id="search-btn" class="btn btn-outline-secondary" type="button">
        <i class="fa fa-search"></i>
      </button>
    </div>
  </div>
</div>
<div class="price-filter">
  <h5 class="search-label">SHOP BY PRICE</h5>
  <div class="price-input-group">
    <span>$&nbsp;&nbsp;</span>
    <input class="form-control price-start-range" type="number" id="price-start" name="shop-by-price">
    <span class="price-input-divider">&nbsp;&nbsp;-&nbsp; $&nbsp;&nbsp;</span>
    <input class="form-control price-end-range" type="number" id="price-end" name="shop-by-price">
    <div class="input-group-append">
      <button id="price-search-btn" class="btn btn-outline-secondary" type="button">Go</button>
    </div>
  </div>
</div>
<div class="accordian-filters">
  <div class="accordion">
    <a class="accordion-header shop-all" href="#/catalog" id="shop-all">shop all</a>
  </div>
  <div class="accordion accordion__brands" id="brands-accordion">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#brands-accordion" href="#brands">
      shop by brands
      <i class="fa fa-plus"></i>
    </a>
    <div class="collapse" id="brands">
      <ul>
        {{#each brands as |item|}}
          <li><a>{{item}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="accordion accordion__categories" id="accordion__categories">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion__categories" href="#categories">
      shop by categories
      <i class="fa fa-plus"></i>
    </a>
    <div class="collapse" id="categories">
      <ul>
        {{#each categories as |item|}}
        <li><a>{{item}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="accordion accordion__color" id="accordion__color">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion__color" href="#color">
      shop by color
      <i class="fa fa-plus"></i>
    </a>
    <div class="collapse" id="color">
      <ul>
        {{#each color as |item|}}
        <li><a>{{item}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="accordion accordion__stone" id="accordion__stone">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion__stone" href="#stone">
      shop by stone
      <i class="fa fa-plus"></i>
    </a>
    <div class="collapse" id="stone">
      <ul>
        {{#each stone as |item|}}
        <li><a>{{item}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="accordion accordion__metal" id="accordion__metal">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion__metal" href="#metal">
      shop by metal
      <i class="fa fa-plus"></i>
    </a>
    <div class="collapse" id="metal">
      <ul>
        {{#each metal as |item|}}
        <li><a>{{item}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>